@model DisasterAlleviationFoundationn.ViewModels.DonationViewModel
@{
    ViewData["Title"] = "Make a Donation";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center"><i class="fas fa-donate me-2"></i>Make a Donation</h3>
            </div>
            <div class="card-body">
                <form asp-action="Donate" method="post">
                    <div class="mb-3">
                        <label asp-for="DonationType" class="form-label"></label>
                        <select asp-for="DonationType" class="form-control">
                            <option value="">Select Donation Type</option>
                            <option value="Money">Financial Donation</option>
                            <option value="Food">Food Supplies</option>
                            <option value="Clothing">Clothing</option>
                            <option value="Medical">Medical Supplies</option>
                            <option value="Shelter">Shelter Materials</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="DonationType" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe what you're donating"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label"></label>
                        <input asp-for="Quantity" class="form-control" placeholder="e.g., R100, 5 boxes, 10kg">
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContactInfo" class="form-label"></label>
                        <input asp-for="ContactInfo" class="form-control" placeholder="Your email or phone number (optional)">
                        <span asp-validation-for="ContactInfo" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Submit Donation
                        </button>
                        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-secondary btn-lg ms-2">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}